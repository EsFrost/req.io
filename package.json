{
  "name": "reqio-electron",
  "version": "1.0.0",
  "description": "App to test API endpoints using curl and electron",
  "license": "ISC",
  "author": "Sigmund Frost",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:css && electron .",
    "dev": "concurrently \"npm run watch:css\" \"electron .\"",
    "build:css": "tailwindcss -i ./src/input.css -o ./styles.css",
    "watch:css": "tailwindcss -i ./src/input.css -o ./styles.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.2",
    "tailwindcss": "^3.4.17"
  }
}
