{
  "name": "reqio-electron",
  "version": "1.0.0",
  "description": "App to test API endpoints using curl and electron",
  "license": "ISC",
  "author": "Sigmund Frost",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build:css && npm run build:ts && electron .",
    "dev": "npm run watch:css & npm run watch:ts & electron .",
    "build:css": "tailwindcss -i ./src/input.css -o ./styles.css",
    "watch:css": "tailwindcss -i ./src/input.css -o ./styles.css --watch",
    "build:ts": "tsc && tsc -p tsconfig.renderer.json",
    "watch:ts": "tsc --watch & tsc -p tsconfig.renderer.json --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "electron": "^39.2.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2"
  }
}